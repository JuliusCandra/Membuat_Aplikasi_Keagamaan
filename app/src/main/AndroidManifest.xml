<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="developer.candra_julius_sinaga">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Detail Rasul Activity-->
        <activity android:name=".detail_activity.DetailRasul"
            android:parentActivityName=".activity.RasulActivity"
            android:configChanges="orientation"
            android:theme="@style/AppTheme2"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.RasulActivity" />
        </activity>
        <!-- Detail Doa Activity -->
        <activity
            android:name=".detail_activity.DetailDoa"
            android:configChanges="orientation"
            android:label="Detail Doa"
            android:parentActivityName=".activity.DoaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DoaActivity" />
        </activity>
        <!-- Detail Gereja Activity -->
        <activity
            android:name=".detail_activity.DetailGereja"
            android:configChanges="orientation"
            android:label="Detail Gereja"
            android:parentActivityName=".activity.GerejaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.GerejaActivity" />
        </activity>
        <!-- developer activity -->
        <activity
            android:name=".activity.Developer"
            android:configChanges="orientation"
            android:label="developer"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            tools:ignore="LockedOrientationActivity">

        </activity>
        <!-- Doa activity -->
        <activity
            android:name=".activity.DoaActivity"
            android:configChanges="orientation"
            android:label="Doa"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="LockedOrientationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <!-- Rasul Activity -->
        <activity
            android:parentActivityName=".activity.MainActivity"
            android:name=".activity.RasulActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="LockedOrientationActivity">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />

        </activity>
        <!-- Gereja Activity -->
        <activity
            android:name=".activity.GerejaActivity"
            android:configChanges="orientation"
            android:label="Gereja"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="LockedOrientationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme3"
            tools:ignore="LockedOrientationActivity" /> <!-- SplashActivity -->
        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Slider Activity -->
        <activity
            android:name=".activity.SliderActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>