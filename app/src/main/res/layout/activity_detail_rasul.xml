<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_activity.DetailRasul">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_blue_bright">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/satugambar"
                android:layout_width="90dp"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/facebook"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textToolbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdfsa"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                 />

        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/caradView"
            app:cardCornerRadius="20dp"
            android:background="@android:color/holo_orange_light"
            app:cardElevation="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/gambarContent"
                        android:layout_width="150dp"
                        app:civ_border_color="@android:color/holo_blue_dark"
                        app:civ_border_width="4dp"
                        android:scaleType="centerCrop"
                        android:layout_height="290dp"
                        android:src="@drawable/helvetia"
                        android:layout_margin="10dp">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Rasul"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/nama_rasul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="nama rasul"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lahir"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pada abad pertama"
                            android:textSize="15sp"
                            android:id="@+id/lahir" />

                        <TextView
                            android:text="Perayaan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="perayaan_rasul"
                            android:textSize="15sp"
                            android:id="@+id/perayaan_rasul" />

                        <TextView
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kota Asal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/Kota_asal"
                            android:text="sdfasd"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:text="Wilayah Karya" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="dfsdfsd"
                            android:id="@+id/wilayah_karya"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wafat"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/wafat"
                            android:text="sdfdsfsd"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:id="@+id/detailText"
                            android:textStyle="bold"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:text="Detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:id="@+id/linear3"
                            android:layout_below="@id/detailText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textContent"
                                android:textSize="18sp"
                                android:text="sdfsd"
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="18sp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/textSUmber"
                                android:textColor="@android:color/holo_blue_bright"
                                android:textStyle="italic"
                                android:textColorLink="@android:color/holo_blue_light"
                                android:text="sdfsd"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

    </LinearLayout>



</ScrollView>