<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".detail_activity.DetailGereja">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark">


    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
        app:expandedTitleMarginStart="15dp"
        app:expandedTitleMarginBottom="20dp"
        app:contentScrim="@color/colorPrimaryApptheme4"
        android:id="@+id/collapsingBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView android:layout_height="300dp"
            android:id="@+id/gambar2"
            android:src="@drawable/katedral"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            app:layout_collapseMode="parallax"
            android:contentDescription="Image1" />

        <View
            android:layout_gravity="bottom"
            android:background="@drawable/gambadetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.Toolbar
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:contentInsetStartWithNavigation="0dp"
            android:layout_height="?actionBarSize">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Nama Paroki"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/paroki1"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:text="Nama Paroki"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/NamaG"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Nama Gereja"
                android:gravity="center"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Namagereja1"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:text="Nama gereja"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Alamat"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/alamat"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:text="Alamat"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Nomor Telepon"
                android:gravity="center"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/telepon"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:text="Nomor Telepon"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Stasi"
                android:gravity="center"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/namaStasi"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:text="Stasi"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Nama Pastor"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/namaPastor"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:text="Nama Pastor"
                android:layout_height="wrap_content" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Jabatan Pastor"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/jabatanPastor"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:text="Jabatan Pastor"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Jumlah Umat"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/jumlahUmat"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:text="Jumlah Umat"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Tanggal Masuk Pastor"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tanggalMasukPastor"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:text="Tanggal masuk pastor"
                android:layout_height="wrap_content" />





        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>