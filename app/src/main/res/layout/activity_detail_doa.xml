<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_activity.DetailDoa">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_red_light"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Small">
        
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Detal Doa"
            android:textStyle="bold"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>
    
    <ScrollView
        android:layout_below="@id/toolbar1"
        android:id="@+id/scrool1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/judulDoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Saya cantik"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="5dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detailDoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="sdfsdfsd"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorTextSecondary"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="normal" />
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>